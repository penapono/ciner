- filmable = critic.filmable
- cover = filmable.cover
- cover ||= "http://placehold.it/250x300"

.row
  .col-xs-12
    .title-separator
      .media
        .media-body.media-bottom
          .media-heading.title-section Cr√≠ticas recentes

.row
  .col-xs-12.critica-mais-recente
    .col-xs-12.col-sm-4.col-md-2
      %img.img-responsive{ src: cover }
    .col-xs-12.col-sm-8.col-md-10.critica-recente
      .info
        .row
          .col-xs-12
            = Critic.human_attribute_name(:release)
            %span.bold.wine
              = l(filmable.release, format: :long_date)

            .pull-right
              %input#input-2.rating.hide{ "data-max": "5", "data-min": "0", "data-readonly": "true", "data-show-caption": "false", "data-show-clear": "false", "data-size": "xss", "data-step": "0.5", name: "input-2", type: "number", value: "4" }

        .row
          .col-xs-12
            = Movie.human_attribute_name(:genders_str)
            %a.bold.wine{href: "#"}
              = filmable.genders_str

      %h4.title
        = filmable.title_str
      %span.original-title
        = filmable.original_title

      .diretor-elenco
        = Movie.human_attribute_name(:directors_str)
        %a.wine.bold{href: "#"}
          = filmable.directors_str
        %br

        = Movie.human_attribute_name(:cast_str)
        = succeed "," do
          %a.wine.bold{href: "#"} Brad Pitt
        = succeed " e" do
          %a.wine.bold{href: "#"} Harrison Ford
        %a.wine.bold{href: "#"} Robert Downey Jr.

      .content
        %p
          = critic.content.truncate(300)
      = link_to critic_path(critic) do
        .btn.btn-saiba-mais
          Saiba mais
