- content_for :javascript, javascript_include_tag('components/filters')
- content_for :stylesheet, stylesheet_link_tag('components/filters')

= hidden_field_tag :filtered, ((params[:search] && !params[:search].blank?) || (params[:filter] && !params[:filter].blank?))

#filters.filters{ data: { dynamic_filter: '' } }
  = simple_form_for :filter, url: path, method: :get, data: { filter_form: '' } do |f|
    = hidden_field_tag :search, params[:search]
    .rowp
      .col-xs-4
        = f.input :filmable_type, collection: FilmProfitable.localized_filmable_types, label: false, include_blank: t('shared.critics.toolbar.filters.filmable_type'), input_html: { data: { dynamic_input: '' } }, selected: filmable_type
      .col-xs-6
        = render 'shared/critics/filmable_filter', f: f, params: params, filmable_type: filmable_type
      .col-xs-2
        = f.input :year, collection: FilmProfitable.localized_years, label: false, include_blank: t('shared.critics.toolbar.filters.year'), input_html: { data: { dynamic_input: '' } }, selected: params.fetch(:filter, {}).fetch(:year, '')
    .row
      .col-xs-4
        = f.input :origin, collection: Critic.localized_origins, label: false, include_blank: t('shared.critics.toolbar.filters.origin'), input_html: { data: { dynamic_input: '' } }, selected: params.fetch(:filter, {}).fetch(:origin, '')
      .col-xs-8
        = f.input :user_id, collection: [], label: false, include_blank: t("shared.critics.toolbar.filters.user_id"), input_html: { data: { dynamic_input: '' } }, selected: params.fetch(:filter, {}).fetch(:user_id, '')
