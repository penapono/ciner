.container.content
  .row
    .col-xs-12
      .title-separator
        .media{ style: 'display: flex; align-items: center; width: 100%; height: 55px;' }
          .media-left.media-middle{ style: 'height: 2em;' }
            %i.fa.fa-id-card-o.fa-2x.wine
          .media-body.media-bottom{ style: 'padding: 10px' }
            .media-heading.title-section Seja Ciner

  .plans{ data: { plans: '' } }
    = render 'plans'

  - if !@user.name.blank? || (params[:user] && !params[:user][:role].blank?)
    - class_hidden = ''
  - else
    - class_hidden = 'hidden'

  .form{ class: class_hidden, data: { form: '' } }
    = render 'form'

= render 'modal'
