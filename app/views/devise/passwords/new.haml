.row
  .col-xs-offset-3.col-xs-6
    .row
      .col-xs-12
        %h2.wine
          Esqueceu sua senha?

    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      .row
        .col-xs-12
          = f.input :email, required: true, autofocus: true, input_html: { placeholder: 'E-mail' }, label: false

      .row
        .col-xs-12
          = f.button :submit, "Enviar instruções para recuperação da senha"
