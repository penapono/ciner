- if current_user
  .welcome
    Olá,
    = current_user.name.split(' ').first
    = link_to '#' do
      %i.fa.fa-chevron-down.white
  .logout
    = link_to 'Não é você?', destroy_user_session_path, method: :delete

- else
  .col-xs-offset-2.col-xs-8.col-sm-offset-1.col-sm-4.col-md-offset-1.col-md-3
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.input :email, label: false, required: false, autofocus: true, input_html: { class: 'form-control' }, placeholder: 'e-mail'
      .form-group
        = f.input :password, label: false, required: false, input_html: { class: 'form-control', placeholder: 'senha' }
      .form-group
        .hidden
          = f.button :submit, 'Entrar'
        %button.btn.btn-login{:type => "submit"}
          Entrar
          %span.icon.icon-button
        %span.register
          ou
          = link_to plans_path do
            %strong seja ciner
