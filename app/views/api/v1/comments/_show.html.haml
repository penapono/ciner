- like_path = like_api_v1_comment_path(comment)
- dislike_path = dislike_api_v1_comment_path(comment)
- user_avatar = comment.user.avatar
- user_avatar ||= image_path("default/user/image.png")

.comentario-item
  .row
    .col-xs-2.col-sm-1
      .usuario-avatar
        %img.img-responsive{ src: user_avatar }
      = comment.user_name
      %br
    .col-xs-9.col-sm-9{ style: "margin-left: 30px;" }
      .status
        %span{:style => "display: inline-block; margin-right: 5px;"}
          %svg.icon-comentario
            %use{"xlink:href" => "#clock"}
        = comment.created_at_str
      .bold.wine
        = comment.spoiler_str if comment.spoiler
      .texto
        = comment.content

      %br

      = render 'shared/reactions', resource: comment, like_path: like_path, dislike_path: dislike_path
