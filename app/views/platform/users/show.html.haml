- content_for :stylesheet, stylesheet_link_tag(stylesheet)
- content_for :javascript, javascript_include_tag(javascript)

.row
  .col-xs-10
    .row
      .col-xs-4
        .avatar
          = image_tag(user.avatar)
      .col-xs-8
        .row
          .col-xs-12
            = user.name
        .row
          .col-xs-12
            = user.email

  .col-xs-2
    = link_to t('edit'), platform_profile_edit_path(user.id)
