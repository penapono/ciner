- content_for :stylesheet, stylesheet_link_tag(stylesheet)
- content_for :javascript, javascript_include_tag(javascript)

= render 'shared/breadcrumbs'

.container
  .row
    .col-xs-12
      .title-separator
        .media
          .media-left.media-middle
            %svg.icon-title
              %use{"xlink:href" => "#debate"}
          .media-body.media-bottom
            .media-heading.title-section
              = t('shared.questions.index.title')

    = render 'shared/questions/toolbar', path: platform_critics_path

.container.debates
  .row.cabecalho
    .col-xs-2.col-sm-1
      %h4.wine
        = t('shared.questions.header.area')
    .col-xs-8.col-sm-4
      %h4.wine
        = t('shared.questions.header.topic')
    .col-sm-3.hidden-xs
      %h4.wine
        = t('shared.questions.header.comments')
    .col-sm-4.hidden-xs
      %h4.wine
        = t('shared.questions.header.activity')

  - if questions.any?
    - questions.each do |question|
      = link_to platform_question_path(question) do
        .row.topico{ class: question_class(question) }
          .col-xs-2.col-sm-1.icone
            %svg.icon-debate
              %use{ "xlink:href": question_icon(question) }
          .col-xs-8.col-sm-4.titulo
            %h4
              = question.title
            = question_created_at_str(question)
          .col-xs-3.hidden-xs.comentario
            %span 1.142
            comentários
            %br
            %span 6.584
            visualizações
          .col-xs-4.hidden-xs.atividade
            %span último comentário
            %br
            João. 1 hora atrás

    = render 'shared/pagination', resources: questions
  - else
    = render 'shared/alerts/info', message: (t('empty', klass: Question.model_name.human(count: 2)))
