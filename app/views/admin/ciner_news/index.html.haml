- content_for :stylesheet, stylesheet_link_tag(stylesheet)
- content_for :javascript, javascript_include_tag(javascript)

= render 'shared/breadcrumbs'

= render 'shared/index_title', title: CinerNew.model_name.human(count: 2), path: new_admin_ciner_news_path

= render 'toolbar'

%table
  %thead
    %tr
      %th
        = CinerNew.human_attribute_name(:name)
      %th
        = CinerNew.human_attribute_name(:country)

      / Actions
      %th{ colspan: 2 }

  %tbody
    - ciner_news.each do |ciner_new|
      %tr
        %td
          = link_to admin_ciner_news_path(ciner_new) do
            = ciner_new.name

        %td
          = ciner_new.country_name

        %td
          = link_to edit_admin_ciner_news_path(ciner_new) do
            %i.fa.fa-pencil
        %td
          = link_to admin_ciner_news_path(ciner_new), method: 'delete' do
            %i.fa.fa-trash

= render 'shared/pagination', resources: ciner_news
