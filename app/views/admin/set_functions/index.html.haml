- content_for :stylesheet, stylesheet_link_tag(stylesheet)
- content_for :javascript, javascript_include_tag(javascript)

= render 'shared/breadcrumbs'

= render 'shared/index_title', title: SetFunction.model_name.human(count: 2), path: new_admin_set_function_path

%table
  %thead
    %tr
      %th
        = SetFunction.human_attribute_name(:name)
      %th
        = SetFunction.human_attribute_name(:description)

      / Actions
      %th{ colspan: 2 }

  %tbody
    - set_functions.each do |set_function|
      %tr
        %td
          = link_to admin_set_function_path(set_function) do
            = set_function.name

        %td
          = set_function.description

        %td
          = link_to edit_admin_set_function_path(set_function) do
            %i.fa.fa-pencil
        %td
          = link_to admin_set_function_path(set_function), method: 'delete' do
            %i.fa.fa-trash

= render 'shared/pagination', resources: set_functions
