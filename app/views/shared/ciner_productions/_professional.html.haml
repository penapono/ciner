- object = professional
- role = role

- if object
  - avatar = image_default_path(object.avatar, "professional")
  - professional_class ||= ""
  - data_mh ||= ""
  - observation ||= nil

  = link_to url_for([role, object]) do
    .col-xs-6.col-sm-4.col-md-2.col-lg-2{ class: professional_class, "data-mh": data_mh, style: "width: 130px; height: 240px;" }
      = image_tag(avatar, class: "img-responsive", style: 'width: 100px; height: 150px;')
      %h5
        = object.name
      - unless observation && observation.empty?
        %p
          = observation
