- questionable_type = params.fetch(:filter, {}).fetch(:questionable_type, '')
- role = '' unless current_user
- role ||= current_user.admin? ? "admin/" : "platform/"

= render 'shared/toolbar'

.toolbar
  .row.searchbar
    .col-xs-12
      = render 'shared/searchbar', form_url: request.url, filter_params: params.fetch(:filter, nil)

  = render "#{role}questions/filters", path: path, questionable_type: questionable_type
