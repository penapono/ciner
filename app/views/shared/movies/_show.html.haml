- current_critics_path ||= platform_critics_path
- current_new_critic_path ||= new_platform_critic_path
- role = current_role(current_user, request.url)

= render 'shared/movies/general', movie: movie, role: role

.container
  .row
    .col-xs-12.col-sm-8
      = render 'shared/movies/info', movie: movie, role: role
    .col-xs-12.col-sm-4
      = render 'shared/movies/statistics', movie: movie

  = render 'shared/integrations/critics', object: movie
  = render 'shared/integrations/broadcasts', object: movie
  = render 'shared/integrations/comments', object: movie
