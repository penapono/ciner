- role = current_role(current_user, request.url)

= render 'shared/breadcrumbs'

.container
  .row
    .col-xs-12.col-sm-8
      = render 'shared/movies/toolbar'
      - unless playing_filmables.blank?
        = render 'shared/movies/index/playing', role: role, filmables: playing_filmables.first(20), see_more_url: url_for([role, :movies, :playing])
      - unless featured_filmables.blank?
        = render 'shared/movies/index/featured', role: role, filmables: featured_filmables.first(20), see_more_url: url_for([role, :movies, :featured])
      - unless playing_soon_filmables.blank?
        = render 'shared/movies/index/playing_soon', role: role, filmables: playing_soon_filmables.first(20), see_more_url: url_for([role, :movies, :playing_soon])
    .col-xs-12.col-sm-4
      = render 'shared/movies/index/birthdays', role: role
