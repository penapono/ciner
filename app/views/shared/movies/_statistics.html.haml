- object = object
- incinerator = object.incinerator

- if incinerator
  - content_for :stylesheet, stylesheet_link_tag('views/shared/incinerator')

  .title-separator
    .media
      .media-left.media-middle
        %svg.media-object{:style => "display: inline-block; width: 32px; height: 32px; vertical-align: middle;"}
          %use{"xlink:href" => "#debate"}
      .media-body.media-bottom
        .media-heading.title-section
          Fala inCINERador
  .incinerator-box
    .row
      .col-xs-3
        .usuario-avatar{ style: 'width: 60px; height: 60px;'}
          - avatar = image_default_path(nil, "cinerd")
          = image_tag(avatar, class: "img-responsive", style: 'width: 60px; height: 60px;')
      .col-xs-9
        %i.fa.fa-quote-left

        = incinerator.content.html_safe

        %i.fa.fa-quote-right
