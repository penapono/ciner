- role = role
- object = object
- cover = image_default_path(object.cover, "movie")

.internal-section-detail-filmable
  .filmable
    .container
      .row
        .col-xs-12.col-sm-12.col-md-3.col-lg-3
          .row
            .col-xs-12
              %img.img-responsive{ src: cover, style: 'height: 330px; width: 220px; !important' }
          .row{ data: { star_rating: { object: object.class, id: object.id } } }
            .col-xs-12{ style: 'margin-left: -30px;' }
              .info{ style: 'margin-top: 10px; text-align: center; font-size: 18px;' }
                %input#input-2.rating.hide{"data-max" => "5", "data-min" => "0", "data-readonly" => "false", "data-show-caption" => "false", "data-show-clear" => "false", "data-size" => "xss", "data-step" => "0.5", :name => "input-2", :type => "number", :value => "4"}
                .rate{ style: 'font-size: 13px;' }
                  Avalie esta mídia
        .col-xs-12.col-sm-12.col-md-9.col-lg-9{ style: 'margin-left: -45px;' }
          .row
            .col-xs-12.col-sm-8.col-md-8.col-lg-8
              Gênero
              %span.wine.bold
                = never_empty(object.genre_pt)
              %br

              = Movie.human_attribute_name(:age_range_id)
              %span.wine.bold
                = never_empty(object.rated_pt)

              \|

              Duração
              %span.wine.bold
                = never_empty(object.length_str)

              %br
              %br

              .title
                %h3.bold.wine
                  = object.title_str
                %h4.light.cinza
                  = "#{object.original_title_str} (#{object.filmable_year})"

              %br

            .col-xs-12.col-sm-4.col-md-4.col-lg-4
              .row
                .col-xs-6
                  .nota
                    = Movie.human_attribute_name(:users_rating)
                    %span.valor
                      = object.users_rating

                - if object.ciner_official_critic
                  .col-xs-6
                    .nota.ciner-rating
                      Nota Ciner
                      %span.valor
                        = object.ciner_official_critic
          .row
            .col-xs-12
              .title
                .synopsis
                  = object.synopsis
                %br

                = Movie.human_attribute_name(:directors_str)
                %span.bold.wine{ style: 'height: 20px; overflow: hidden;' }
                  = never_empty(object.directors_str)
                %br

                Roteiro
                %span.bold.wine{ style: 'height: 20px; overflow: hidden;' }
                  = never_empty(object.writers_str)
                %br

                = Movie.human_attribute_name(:cast_str)
                %span.bold.wine{ style: 'height: 20px; overflow: hidden;' }
                  = never_empty(object.actors_str)

                %br

                %br
                País(es) de Produção
                %span.bold.wine{ style: 'height: 20px; overflow: hidden;' }
                  = never_empty(object.countries_str)
                %br

                Lançamento no Brasil
                %span.wine.bold
                  = never_empty(object.brazilian_release_str)

          = render 'shared/movies/user_actions', object: object, role: role
