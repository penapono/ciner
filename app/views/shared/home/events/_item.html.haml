- if current_user
  - if current_user.admin?
    .post-item.event
      .content
        = link_to admin_events_path(anchor: "#{event.id}") do
          = event.title
        .highlight
          - if event.featured?
            .button
              Destaque
          .info
            = "Data: #{event.datetime_str}"
  - else
    .post-item.event
      .content
        = link_to platform_events_path(anchor: "#{event.id}") do
          = event.title
        .highlight
          - if event.featured?
            .button
              Destaque
          .info
            = "Data: #{event.datetime_str}"
- else
  .post-item.event
    .content
      = link_to events_path(anchor: "#{event.id}") do
        = event.title
      .highlight
        - if event.featured?
          .button
            Destaque
        .info
          = "Data: #{event.datetime_str}"
