.col-xs-12.col-sm-12.col-md-5.col-lg-4
  .section-news
    .title-separator.ciner-news
      .media
        .media-left.media-middle
          %svg.icon-title
            %use{"xlink:href" => "#noticia"}
        .media-body.media-bottom
          .media-heading.title-section
            Agenda Ciner
        .media-body.text-right.media-middle
          = link_to url_for([role, :events]) do
            = t('see_more')

    - if events.any?
      - events.each do |event|
        = render 'shared/home/events/item', event: event, role: role
    - else
      = render 'shared/alerts/info', message: (t('empty', klass: Event.model_name.human(count: 2)))
