.col-xs-12.col-sm-12.col-md-7.col-lg-8.debates
  .title-separator.ciner-discussion
    .media
      .media-left.media-middle
        %svg.icon-title
          %use{"xlink:href" => "#debate"}
      .media-body.media-bottom
        .media-heading.title-section Debate Ciner
      .media-body.text-right.media-middle
        = link_to url_for([role, :questions]) do
          = t('see_more')
  .discussion
    - questions.each do |question|
      = render 'shared/home/questions/item', question: question, role: role
