#arquivos.criticas
  .title-separator
    .media
      .media-body.media-bottom
        .media-heading.title-section
          Documentos

  .row
    - curriculum.curriculum_files.each do |file|
      .col-xs-12.col-sm-4
        / = link_to "Download #{file.media.filename}", file.media.url, download: ""
        %iframe{:frameborder => "0", :src => "http://docs.google.com/gview?url=#{file.media.url}&embedded=true", :style => "width: 330px; height: auto;"}
