- content_for :javascript, javascript_include_tag('views/shared/curriculums/form')
- content_for :stylesheet, stylesheet_link_tag('views/shared/curriculums/form')

- role = current_role(current_user, request.url)

%h3.wine
  Dados Gerais do Currículo
%span
  Os campos sinalizados com * são de preenchimento obrigatório

.row
  .col-xs-6
    = label_tag 'Nome'
    = text_field_tag :user_nickname, current_user.name, disabled: true

  .col-xs-6
    = f.input :play_name
    = f.hidden_field :user_id, value: (f.object.user ? f.object.user.id : current_user.id)

.row
  .col-xs-3
    = label_tag 'Sexo'
    = text_field_tag :user_gender, current_user.gender_str, disabled: true
  .col-xs-3
    = label_tag 'Idade'
    = text_field_tag :user_gender, "#{current_user.age} anos", disabled: true
  .col-xs-3
    = label_tag 'Cidade'
    = text_field_tag :user_nickname, current_user.city_name, disabled: true
  .col-xs-3
    = label_tag 'Estado'
    = text_field_tag :user_nickname, current_user.state_name, disabled: true

.row
  .col-xs-4
    = f.input :curriculum_function_id, collection: CurriculumFunction.all.order(name: :asc), input_html: { class: 'select2 form-field' }
  / .col-xs-4
  /   = f.input :curriculum_function_id, collection: CurriculumFunction.all.order(name: :asc), input_html: { class: 'select2 form-field' }
  / .col-xs-4
  /   = f.input :curriculum_function_id, collection: CurriculumFunction.all.order(name: :asc), input_html: { class: 'select2 form-field' }

.row
  .col-xs-12
    %h3.wine
      = t('.about')

.row
  .col-xs-12{ data: { limited: '', limit: 250 } }
    = f.input :biography, label: false, input_html: { rows: 5 }, maxlength: 250
    %span.char-counter
      = t('remaining_chars', chars: 250)

.row
  .col-xs-12{ data: { limited: '', limit: 200 } }
    = f.input :jobs, input_html: { rows: 2 }, maxlength: 200
    %span.char-counter
      = t('remaining_chars', chars: 200)

.row
  .col-xs-12{ data: { limited: '', limit: 90 } }
    = f.input :awards, input_html: { rows: 1 }, maxlength: 90
    %span.char-counter
      = t('remaining_chars', chars: 90)

.row
  .col-xs-12
    = checkbox_item(f, :drt)

.row
  .col-xs-12
    %h3.wine
      = t('.body')

.row
  .col-xs-4
    = f.input :ethnicity, collection: [["Branca", :white], ["Preta", :afrodescendant], ["Parda", :brown], ["Amarela", :yellow], ["Indígena", :indigenous]]
  .col-xs-4
    = f.input :height, as: :string, input_html: { class: 'height' }
  .col-xs-4
    = f.input :mannequin, as: :string, input_html: { class: 'mannequin' }


.row
  .col-xs-6
    %h3.wine
      Imagens
.row
  .col-xs-6
    = render 'shared/curriculums/curriculum_photos/nested', f: f

.row
  .col-xs-6
    %h3.wine
      Áudios
.row
  .col-xs-6
    = render 'shared/curriculums/curriculum_audios/nested', f: f

.row
  .col-xs-6
    %h3.wine
      Vídeos
.row
  .col-xs-6
    = render 'shared/curriculums/curriculum_videos/nested', f: f

.row
  .col-xs-6
    %h3.wine
      Arquivos
.row
  .col-xs-6
    = render 'shared/curriculums/curriculum_files/nested', f: f

.row.actions
  - if f.object.persisted?
    .col-xs-3.pull-left
      = link_to url_for([role, f.object]), method: 'delete' do
        .btn.submit
          Excluir Currículo
  .col-xs-12.col-sm-3.pull-right
    = f.button :submit, t('confirm')
  .col-xs-12.col-sm-3.pull-right
    = link_to :back do
      .btn.submit{ input: { type: 'submit' } }
        = t('cancel')

