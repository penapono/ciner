- object = serie
- cover = object.cover
- cover ||= "http://placehold.it/550x700"

.internal-section-detail-filmable
  .filmable
    .container
      .row
        .col-xs-12.col-sm-12.col-md-3.col-lg-3
          %img.img-responsive{ src: cover, style: 'height: 400px; width: 266px;' }
        .col-xs-12.col-sm-12.col-md-9.col-lg-9
          .row
            .col-xs-12.col-sm-8.col-md-8.col-lg-8
              Gênero
              %a.wine.bold
                = object.genre_pt
              %br

              = Movie.human_attribute_name(:age_range_id)
              %span.wine.bold
                = object.rated_pt

              \|

              Duração
              %span.wine.bold
                = object.length_str

              %br
              %br

              .title
                %h3.bold.wine
                  = object.title_str
                %h4.light.cinza
                  = "#{object.original_title_str} (#{object.start_year})"

              %br

            .col-xs-12.col-sm-4.col-md-4.col-lg-4
              .row
                .col-xs-6
                  .nota
                    = Movie.human_attribute_name(:users_rating)
                    %span.valor
                      = object.users_rating
                    = t('votes', count: object.users_rating_count)

                - if object.ciner_official_critic
                  .col-xs-6
                    .nota.ciner-rating
                      = Movie.human_attribute_name(:ciner_rating)
                      %span.valor
                        = object.ciner_official_critic.rating
                      = object.ciner_official_critic.user_name
          .row
            .col-xs-12
              .title
                .synopsis
                  = object.synopsis
                  %a.bold.wine
                    = t('more')
                %br

                = Movie.human_attribute_name(:directors_str)
                %a.bold.wine
                  = object.omdb_directors
                %br

                Roteiro
                %a.bold.wine
                  = object.writers_pt
                %br

                = Movie.human_attribute_name(:cast_str)
                %a.bold.wine
                  = object.omdb_actors
                %a.bold.preto{:href => "#ficha-tecnica"}
                  = t('more')
                %br

                %br
                País de Produção
                %a.bold.wine
                  = object.countries
                %br

                Lançamento no Brasil
                %span.wine.bold
                  = object.brazilian_release_str

          .row
            .col-xs-12
              .row
                .tags
                  .button
                    %a
                      %svg.icon-tags
                        %use{"xlink:href" => "#ja-assisti"}
                      já assisti
                  .button
                    %a
                      %svg.icon-tags
                        %use{"xlink:href" => "#quero-ver"}
                      quero ver
                  .button
                    %a
                      %svg.icon-tags
                        %use{"xlink:href" => "#adicionar"}
                      adicionar
                  .button
                    %a.active
                      %svg.icon-tags
                        %use{"xlink:href" => "#favorito"}
                      favorito
                  .button
                    %a
                      %svg.icon-tags
                        %use{"xlink:href" => "#like"}
                      indique
