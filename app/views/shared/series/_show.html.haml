- content_for :javascript, javascript_include_tag('components/collapser')

- current_critics_path ||= platform_critics_path
- current_new_critic_path ||= new_platform_critic_path
- if current_user
  - role = current_user.admin? ? :admin : :platform
- role ||= nil

= render 'shared/series/general', serie: serie

.container
  .row
    .col-xs-12.col-sm-3
      %a.btn.btn-block.btn-ancora{:href => "#ficha-tecnica"} Trailer
    .col-xs-12.col-sm-3
      %a.btn.btn-block.btn-ancora{:href => "#criticas"} Críticas
    .col-xs-12.col-sm-3
      %a.btn.btn-block.btn-ancora{:href => "#comentarios"} Comentários
    .col-xs-12.col-sm-3
      %a.btn.btn-block.btn-ancora{:href => "#noticias"} Notícias
    .col-xs-12.col-sm-8
      = render 'shared/series/info', serie: serie, role: role
      = render 'shared/series/critics', serie: serie, role: role
    .col-xs-12.col-sm-4
      = render 'shared/series/statistics', serie: serie
  .row
    = render 'shared/series/comments', serie: serie
    = render 'shared/series/broadcasts', serie: serie
