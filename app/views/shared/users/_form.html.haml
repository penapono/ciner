- content_for :javascript, javascript_include_tag('views/shared/users/form')

.row
  .col-xs-12
    = f.error_notification

%h3
  = t('.general')

.row
  .col-xs-9
    = f.input :name, required: true, autofocus: true
  .col-xs-3
    = f.input :gender

.row
  .col-xs-9
    = f.input :nickname, required: true
  .col-xs-3
    = f.input :birthday, as: :string, input_html: { value: localize(f.object.birthday || Date.today), class: 'datepicker' }

.row
  .col-xs-9
    = f.input :email

%h3
  = t('.address')

.row
  .col-xs-3
    = f.input :cep
  .col-xs-9
    = f.input :address

.row
  .col-xs-6
    = f.input :neighbourhood
  .col-xs-6
    = f.input :city_id, collection: City.all

.row
  .col-xs-6
    = f.input :cpf
  .col-xs-6
    = f.input :phone

%h3
  = t('.avatar')

.row
  .col-xs-6
    = f.input :avatar, label: false

%h3
  = t('.password')

.row
  .col-xs-12.col-sm-6
    = f.input :password, required: true
  .col-xs-12.col-sm-6
    = f.input :password_confirmation, required: true

.row
  .col-xs-12.col-sm-4
    = submit_tag t('cancel')
  .col-xs-12.col-sm-4
    = f.button :submit, t('confirm')
