- filmable = critic.filmable
- cover = filmable.cover
- cover ||= image_path("default/movie/image.png")

.col-xs-12.col-sm-6
  .row
    .review-item
      .col-xs-12.col-sm-5.thumb
        %figure
          %img.img-responsive{ src: cover }
      .col-xs-12.col-sm-7.resume
        %h4.title
          = filmable.title_str
        %span.original-title
          = filmable.original_title
        %p
          = critic.collapsed_content
        = link_to user_critic_path do
          .btn.btn-saiba-mais
            Saiba mais
