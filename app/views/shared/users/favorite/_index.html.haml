- if current_user
  - role = current_user.admin? ? :admin : :platform
- role ||= nil

.container.content
  .row
    .col-xs-12
      .title-separator
        .media
          .media-body.media-bottom
            .media-heading.title-section
              = "Favoritos de #{user.name}"

      .row
        - filmables.each do |filmable|
          - object = filmable
          - cover = object.cover
          - cover ||= image_path("default/movie/image.png")

          .col-sm-2.col-xs-3.no-shelf
            = link_to url_for([role, object]) do
              = image_tag(cover, class: "img-responsive", style: 'width: 133px; height: 195px;' )
