- if current_user
  - role = current_user.admin? ? :admin : :platform
- role ||= nil

.container.content
  .row
    .col-xs-12
      .title-separator
        .media
          .media-body.media-bottom
            .media-heading.title-section
              = "Coleção de #{user.name}"

      .row
        - filmables.each do |user_filmable|
          - object = user_filmable.filmable
          - cover = object.cover
          - cover ||= "http://placehold.it/550x700"

          .col-sm-2.col-xs-3.shelf
            = link_to url_for([role, object]) do
              = image_tag(cover, class: "img-responsive")
