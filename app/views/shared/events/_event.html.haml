- role = current_role(current_user, request.url)

- object = event
- cover = image_default_path(object.cover, "movie")

.hidden-md.hidden-lg.hidden-xl
  .noticia-item{ style: 'padding-bottom: 10px; margin-bottom: 10px; border-bottom: 1px solid #CCCCCC;' }
    .row
      .col-xs-12{ id: object.id, style: 'padding-right: 0px;' }
        = image_tag(cover, class: "img-responsive", style: 'height: auto; max-height: 171px; max-width: 261px; width: 100%')
    .row
      .col-xs-12
        - unless object.state.blank? && object.place.blank?
          .row
            .col-xs-12
              .wine{ style: 'height: 40px;' }
                %span{ style: 'margin-right: 15px;' }
                  - if object.state
                    = object.state.name
                    \-
                  - if object.place
                    = object.place
            .col-xs-12
              %span{ style: 'font-size: 12px; color: #ccc' }
                = event.datetime_str
        .row
          .col-xs-12

            - unless event.status_str.blank?
              .row{ style: 'margin-bottom: 0px; margin-top: 0px; padding-bottom: 0px; padding-top: 0px' }
                .col-xs-12
                  .highlight{ style: 'font-size: 12px; width: auto; float: left; color: rgb(184, 184, 184); margin-bottom: 5px; margin-top: 10px; height: 30px; margin-top: 0px;' }
                    .button{ style: 'cursor: normal; float: left; border: 1px solid $light-orange; border-radius: 8px; padding: 4px 10px; text-decoration: none; background: transparent; margin-right: 10px; margin-bottom: 5px;' }
                      = event.status_str
            .row{ style: 'margin-top: 0px;' }
              .col-xs-12
                %h3.bold{ style: 'box-sizing: border-box; color: rgb(51, 51, 51); font-family: "Montserrat"; font-size: 20px; font-weight: 700; line-height: 26.4px; margin-bottom: 0px; margin-top: 0px; height: 37px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;' }
                  = object.title
        .desc{ style: 'height: 74px; font-size: 13px; overflow: hidden' }
          = object.description.html_safe

          - unless object.video.blank?
            \|
            %span.more.wine.bold{ data: { show: '', url: polymorphic_path([object], view: 'video') }, style: 'cursor: pointer;' }
              Assista ao vídeo

          - if object.event_images.any?
            \|
            %span.more.wine.bold{ data: { show: '', url: polymorphic_path([object], view: 'gallery') }, style: 'cursor: pointer;' }
              Veja a galeria

          - unless object.more.blank?
            \|
            %span.more.wine.bold{ data: { show: '', url: polymorphic_path([object], view: 'info') }, style: 'cursor: pointer;' }
              Informações completas aqui

.hidden-xs.hidden-sm
  .noticia-item{ style: 'padding-bottom: 10px; margin-bottom: 10px; border-bottom: 1px solid #CCCCCC;' }
    .row
      .col-xs-3{ id: object.id }
        / %img.img-responsive{ src: cover, style: 'height: 171px; width: 261px;' }
        = image_tag(cover, class: "img-responsive", style: 'height: 171px; width: 261px;')
      .col-xs-9
        .wine{ style: 'height: 20px;' }
          - unless object.state.blank? && object.place.blank?
            %span{ style: 'margin-right: 15px;' }
              - if object.state
                = object.state.name
                \-
              - if object.place
                = object.place
          %span{ style: 'font-size: 12px; color: #ccc' }
            = event.datetime_str
        %h3.bold{ style: 'box-sizing: border-box; color: rgb(51, 51, 51); font-family: "Montserrat"; font-size: 20px; font-weight: 700; line-height: 26.4px; margin-bottom: 0px; margin-top: 10px; height: 37px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;' }
          - unless event.status_str.blank?
            .highlight{ style: 'font-size: 12px; width: auto; float: left; color: rgb(184, 184, 184); margin-bottom: 5px; margin-top: 10px; height: 30px; margin-top: 0px;' }
              .button{ style: 'cursor: normal; float: left; border: 1px solid $light-orange; border-radius: 8px; padding: 4px 10px; text-decoration: none; background: transparent; margin-right: 10px; margin-bottom: 5px;' }
                = event.status_str
          = object.title
        .desc{ style: 'height: 74px; font-size: 13px; overflow: hidden' }
          = object.description.html_safe

          - unless object.video.blank?
            \|
            %span.more.wine.bold{ data: { show: '', url: polymorphic_path([object], view: 'video') }, style: 'cursor: pointer;' }
              Assista ao vídeo

          - if object.event_images.any?
            \|
            %span.more.wine.bold{ data: { show: '', url: polymorphic_path([object], view: 'gallery') }, style: 'cursor: pointer;' }
              Veja a galeria

          - unless object.more.blank?
            \|
            %span.more.wine.bold{ data: { show: '', url: polymorphic_path([object], view: 'info') }, style: 'cursor: pointer;' }
              Informações completas aqui
