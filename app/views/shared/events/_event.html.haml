- if current_user
  - role = current_user.admin? ? :admin : :platform
- role ||= nil

- like_path ||= nil
- dislike_path ||= nil

.container.content{ id: "#{event.id}" }
  .row
    .col-xs-12
      .row
        .col-xs-12.titulo{ style: 'margin-top: 5px; word-break: break-all;' }
          %h4.wine
            = event.title

      %hr

      .row
        .col-xs-12{ style: 'overflow: hidden' }
          .curriculum-biograpy
            = event.description.html_safe

      .row
        .col-xs-12
          .highlight
            - if event.featured?
              .button
                %span
                  Destaque
            = "Data: #{event.datetime_str}"
